extends layout

block content
  h2 Trades
  div#jsGrid
  hr
  h2 Kpler Reference Trades
  div.box
    form(action="/showTrades", method="post")
      table.table.table-striped.table-bordered
        tr
          td Vessel
          td Origin date
          td Origin
          td Seller
          td Destination
          td Destination date
          td Buyer
          td Charterer
          td Cargo
          td Product
        if (typeof tradesModel === "undefined")
          tr
            td
        else
          each trade in tradesModel
            tr
              td #{trade.vessel_id}
              td #{trade.origin_date}
              td #{trade.origin_id}
              td #{trade.seller}
              td #{trade.destination_id}
              td #{trade.destination_date}
              td #{trade.buyer}
              td #{trade.charterer}
              td #{trade.value}
              td #{trade.product_name}
              td
                input(type="checkbox", name="#{trade.id}", value="#{!trade.completed}", checked=trade.completed)
              td
                button.btn(type="submit") Edit
    //button.btn(type="submit") Update Trades
  hr
  h2 Vessel History: Clipper Quito
  div.box